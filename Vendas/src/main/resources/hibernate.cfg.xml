<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- configurações com bando de dados MYsql-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:8889/banco?useSSL=true</property>
        <property name="connection.username">elias</property>
        <property name="connection.password"></property>

        <!-- pool de conexoes -->
        <property name="connection.pool_size">5</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>

        <!-- gerenciamento do contexto das sessões -->
        <property name="current_session_context_class">thread</property>

        <!-- cash de segundo nivel  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- mostra sqls geradas -->
        <property name="show_sql">true</property>

        <!-- cria tabelas do banco de dados-->
        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="com.elias.vendas.domain.Recebimento"/>
		<mapping class="com.elias.vendas.domain.Dinheiro"/>
		<mapping class="com.elias.vendas.domain.Cidade"/>
        <mapping class="com.elias.vendas.domain.Cliente"/>
        <mapping class="com.elias.vendas.domain.Estado"/>
        <mapping class="com.elias.vendas.domain.Fabricante"/>
        <mapping class="com.elias.vendas.domain.Funcionario"/>
        <mapping class="com.elias.vendas.domain.ItemVenda"/>
        <mapping class="com.elias.vendas.domain.Pessoa"/>
        <mapping class="com.elias.vendas.domain.Produto"/>
		<mapping class="com.elias.vendas.domain.Usuario"/>
		<mapping class="com.elias.vendas.domain.Venda"/>
		
		<mapping class="com.elias.vendas.domain.Crediario"/>
		<mapping class="com.elias.vendas.domain.TipoDeVenda"/>

		
    </session-factory>

</hibernate-configuration>